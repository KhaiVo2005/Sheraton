@page "/blazor"
@namespace Sheraton.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Gửi đánh giá</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background: #f8f9fa;
        }

        .rating-card {
            max-width: 600px;
            margin: 50px auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card shadow rating-card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-star-half-alt"></i> Gửi đánh giá của bạn</h4>
            </div>
            <div class="card-body">
                <component type="typeof(Sheraton.Components.RatingForm)" render-mode="ServerPrerendered" />
            </div>
        </div>
    </div>

    <script src="/_framework/blazor.server.js"></script>
</body>
</html>
