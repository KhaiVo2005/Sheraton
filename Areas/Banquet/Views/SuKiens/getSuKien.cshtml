@model IEnumerable<Sheraton.Models.HopDong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản lý sự kiện</h1>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ngày kí </th>
            <th>Số lượng khách</th>
            <th>Trạng thái</th>
            <th>Khách hàng</th>
            <th>Dịch vụ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DichVu.TenDV)
            </td>
            <td>
                <a asp-action="updateSuKien" asp-route-id="@item.MaHD" class="btn btn-sm btn-warning">Sửa</a>
                <a asp-action="detailsSuKien" asp-route-id="@item.MaHD" class="btn btn-sm btn-info">Chi tiết</a>
                <a href="/danhgia?MaHD=@item.MaHD.ToString()" class="btn btn-sm btn-success">Đánh giá</a>
            </td>
        </tr>
}
    </tbody>
</table>
