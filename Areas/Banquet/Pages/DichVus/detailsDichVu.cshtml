@page "{id:Guid}"
@model Sheraton.Areas.Banquet.Pages.DichVus.detailsDichVuModel
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết dịch vụ</h2>
<hr />
<dl class="row">
    <dt class="col-sm-3">Tên dịch vụ</dt>
    <dd class="col-sm-9">@Model.DichVu.TenDV</dd>

    <dt class="col-sm-3">Đơn giá</dt>
    <dd class="col-sm-9">@Model.DichVu.DonGia</dd>

    <dt class="col-sm-3">Mô tả</dt>
    <dd class="col-sm-9">@Model.DichVu.MoTa</dd>
</dl>

<div class="mt-3">
    <a asp-page="updateDichVu" asp-route-id="@Model.DichVu.MaDV" class="btn btn-primary">Sửa</a>
    <a asp-page="getDichVu" class="btn btn-secondary">Quay lại</a>
</div>
