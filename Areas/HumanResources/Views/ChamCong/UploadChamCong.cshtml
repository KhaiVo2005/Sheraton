@model IEnumerable<Sheraton.Models.BangLuong>

@{
    ViewData["Title"] = "Tải lên file chấm công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UploadChamCong" asp-controller="ChamCong" enctype="multipart/form-data" method="post">
    <input type="file" name="file" />
    <button type="submit">Tính giờ làm</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

@if (Model != null && Model.Any())
{
    <h4>Kết quả tính giờ làm từ bảng chấm công:</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên nhân viên</th>
                <th>Tổng giờ làm</th>
                <th>Tổng lương</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NhanVien?.TenNV</td>
                    <td>@item.TongGioLam</td>
                    <td>@item.TongLuong?.ToString("N0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
}
