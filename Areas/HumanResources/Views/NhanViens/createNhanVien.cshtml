@model Sheraton.Models.NhanVien

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>NhanVien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="createNhanVien">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenNV" class="control-label"></label>
                <input asp-for="TenNV" class="form-control" />
                <span asp-validation-for="TenNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TK" class="control-label"></label>
                <input asp-for="TK" class="form-control" />
                <span asp-validation-for="TK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MK" class="control-label"></label>
                <input asp-for="MK" class="form-control" />
                <span asp-validation-for="MK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDT" class="control-label"></label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GioiTinh" /> @Html.DisplayNameFor(model => model.GioiTinh)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ChucVu" class="control-label"></label>
                <select asp-for="ChucVu" class="form-control" id="chucVuSelect">
                </select>
                <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="getNhanVien">Back to List</a>
</div>

@section Scripts {
    <script>
        const roleDict = {
            "Accounting": "Kế toán",
            "Banquet": "Tiệc",
            "HumanResources": "Nhân sự",
            "Kitchen": "Bếp",
            "Sale": "Bán hàng"
        };

        const select = document.getElementById("chucVuSelect");

        for (const [value, label] of Object.entries(roleDict)) {
            const option = document.createElement("option");
            option.value = value;         // Lưu vào CSDL
            option.textContent = label;   // Hiển thị
            select.appendChild(option);
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

