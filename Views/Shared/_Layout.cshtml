<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewData["Title"] - Sheraton</title>

    <!-- FontAwesome + Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
            overflow: hidden;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background-color: #2c3e50;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            z-index: 1000;
        }

            .header .title-left {
                font-weight: bold;
                font-size: 20px;
            }

            .header .title-right {
                font-size: 14px;
            }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 60px; /* dưới header */
            bottom: 40px; /* trên footer */
            left: 0;
            width: 250px;
            background-color: #34495e;
            color: white;
            padding: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px 0;
                text-decoration: none;
            }

                .sidebar a:hover {
                    color: #1abc9c;
                }

        /* Content */
        .content {
            position: fixed;
            top: 60px;
            bottom: 40px;
            left: 250px; /* bằng chiều rộng sidebar */
            right: 0;
            padding: 30px;
            overflow-y: auto;
            background-color: #f5f5f5;
        }

        /* Footer */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 40px;
            background-color: #2c3e50;
            color: white;
            text-align: center;
            line-height: 40px;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="title-left">
            <strong>Sheraton</strong> <span class="ms-2">Khu vực Banquet</span>
        </div>
        <div class="title-right">
            Xin chào, Nhân viên Banquet
        </div>
    </div>

    <!-- Sidebar -->
    @await Component.InvokeAsync("Sidebar")

    <!-- Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="footer">
        © 2025 Sheraton - Banquet Dashboard
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
