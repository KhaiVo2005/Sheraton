<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/humanresouces.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sheraton.styles.css" asp-append-version="true" />
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header class="layout-header">
        <div class="brand">
            <i class="fa-solid fa-users-gear me-2"></i> Quản lý nhân sự
        </div>

        <!-- Tìm kiếm nhân sự -->
        <form asp-area="HR" asp-controller="NhanSu" asp-action="Search" method="get">
            <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm nhân sự..." />
            <button type="submit" class="btn btn-success">
                <i class="fa fa-search"></i>
            </button>
        </form>

        <div class="user-info">Xin chào, Nhân sự</div>
    </header>

    <div class="layout-body">
        <div class="sidebar">
            <h4>Chức năng</h4>
            <a asp-area="HumanResources" asp-controller="NhanViens" asp-action="getNhanVien"> Danh sách nhân sự</a>
            <a asp-area="HumanResources" asp-controller="NhanViens" asp-action="getNhanVien"> Nhân sự đang hoạt động</a>
            <a asp-area="HumanResources" asp-controller="NhanViens" asp-action="getNhanVien"> Nhân sự đã khoá tài khoản</a>
        </div>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer>
        &copy; @DateTime.Now.Year Sheraton - Bộ phận Nhân sự
    </footer>
</body>
</html>
